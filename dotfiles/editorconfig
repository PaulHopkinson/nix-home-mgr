# editorconfig (put in dotfiles/)

# Top-most EditorConfig file
root = true

# Unix line endings, no BOM, UTF-8 everywhere
[*]
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Makefiles and some system files require tabs
[Makefile]
indent_style = tab

# Nix, YAML, JSON: 2 spaces
[*.nix]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

# Markdown: 2 spaces, but allow trailing whitespace for line breaks
[*.md]
indent_size = 2
trim_trailing_whitespace = false

# TOML: 2 spaces (common, used by starship, pyproject.toml, etc)
[*.toml]
indent_size = 2

# Python: 4 spaces, as per PEP8
[*.py]
indent_size = 4

# Shell scripts: 4 spaces
[*.sh]
indent_size = 4

# Rust: 4 spaces
[*.rs]
indent_size = 4

# Markdown lint files
[.markdownlint*]
indent_size = 2

