{
  // ==================================
  //         Editor Basics
  // ==================================
  "editor.fontFamily": "'JetBrains Mono', 'Fira Code', 'Source Code Pro', 'monospace'",
  "editor.fontLigatures": true,
  "editor.fontSize": 13,
  "editor.lineHeight": 1.5,
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.rulers": [80, 100],
  "editor.minimap.enabled": false,
  "editor.formatOnSave": true,
  "editor.wordWrap": "on",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": true,
  "editor.renderControlCharacters": false,
  "editor.renderLineHighlight": "all",
  "editor.renderWhitespace": "boundary",
  "editor.smoothScrolling": true,

  // ==================================
  //            Files & UI
  // ==================================
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.associations": {
    "*.md": "markdown",
    "*.nix": "nix",
    "flake.lock": "json",
  },
  "files.autoSave": "onWindowChange",
  "files.exclude": {
    "**/.DS_Store": true,
    "**/.git": true,
    "**/__pycache__": true,
    "**/node_modules": true,
    "**/target": true,
  },
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "newUntitledFile",

  // ==================================
  //             Terminal
  // ==================================
  "terminal.integrated.fontFamily": "'JetBrains Mono', 'Fira Code', 'monospace'",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.scrollback": 10000,

  // ==================================
  //             Python
  // ==================================
  "python.formatting.provider": "black",
  "python.languageServer": "Pylance",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.testing.pytestArgs": [
    "tests",
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,

  // ==================================
  //              Rust
  // ==================================
  "rust-analyzer.cargo.useRustcWrapperForBuildScripts": true,
  "rust-analyzer.checkOnSave.command": "clippy",
  "rust-analyzer.inlayHints.enable": true,
  "rust-analyzer.procMacro.enable": true,

  // ==================================
  //             Markdown
  // ==================================
  "markdown.preview.breaks": true,
  "markdown.preview.fontFamily": "'JetBrains Mono', 'Fira Code', 'Source Code Pro', 'monospace'",
  "markdown.preview.fontSize": 14,
  "markdown.preview.lineHeight": 1.6,
  "markdown.preview.scrollEditorWithPreview": true,
  "markdown.preview.scrollPreviewWithEditor": true,
  "markdown.extension.print.absoluteImgPath": false,
  "markdown.extension.toc.levels": "2..5",
  "markdown.extension.toc.orderedList": false,
  "markdown.extension.toc.slugifyMode": "github",
  "markdownlint.config": {
    "default": true,
    "MD013": false, // Disable line length rule
  },

  // ==================================
  //               Git
  // ==================================
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.decorations.enabled": true,
  "git.enableSmartCommit": true,

  // ==================================
  //          Miscellaneous
  // ==================================
  "breadcrumbs.enabled": true,
  "editor.gotoLocation.multipleDefinitions": "peek",
  "editor.gotoLocation.multipleReferences": "peek",
  "window.zoomLevel": 0
}

